<%= form_for HerokuApplication.new, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>New Heroku Application</legend>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field', :placeholder => 'optional' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', heroku_applications_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>